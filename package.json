{
  "name": "recipe-manager",
  "version": "1.0.0",
  "description": "Recipe Management PWA - Full Stack Application",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && pnpm dev",
    "dev:frontend": "cd frontend && pnpm dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && pnpm build",
    "build:frontend": "cd frontend && pnpm build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && pnpm start",
    "start:frontend": "cd frontend && pnpm preview",
    "install:all": "cd backend && pnpm install && cd ../frontend && pnpm install",
    "db:generate": "cd backend && pnpm db:generate",
    "db:migrate": "cd backend && pnpm db:migrate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
